{
  "compilerOptions": {
    "target": "es6",
    "outDir": "./dist/",
    "module": "commonjs",
    "jsx": "preserve",
    // "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "isolatedModules": true,
    "noEmit": true,
    "skipLibCheck": true,
    "strictFunctionTypes": false,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "incremental": true
  },
  "exclude": [
    "node_modules",
    "public",
    "**/*.test.tsx",
    "*.js"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
